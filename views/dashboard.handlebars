<section class="col-12 mb-2 bg-dark text-light p-3">
    <h2 class="text-light">Create New Posts</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title:</label>
            <input type="text" id="post-title" name="post-title" class="form-input portfolio-languages text-dark" />
    
        </div>
        <div>
            <label for="post-body">Content:</label>
            <br>
            <textarea type="text" id="post-body" name="post-body" class="form-input text-dark"></textarea>
        </div>

        <button type="submit" class="btn">Create</button>
    </form>
</section>

{{#if post.length}}
<section>
    <h2>Your posts</h2>
    <ol>
        {{#each post}}
        <li>
            <div class="col-12 col-md-6 mb-2 bg-dark text-light p-3 flex-column">
                <h3 class="portfolio-item-title text-light">{{title}}</h3>
                <h5 class="portfolio-languages">{{body}}</h5>
                <p>posted by {{user.username}} on {{format_date created_at}}</p>
                <a class="text-light" href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
                <a href="dashboard/edit/{{id}}" class="edit-link text-light">Edit Post</a>
            </div>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}


<script src="/javascript/add-post.js"></script>